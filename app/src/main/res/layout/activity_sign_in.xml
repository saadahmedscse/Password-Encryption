<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorLightGrey"
    tools:context=".Signing.SignInActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingStart="25dp"
        android:paddingEnd="5dp"
        android:fontFamily="@font/typoring"
        android:text="Encrypted Password\nBook"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:textSize="36sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="25dp"
        android:paddingEnd="5dp"
        android:fontFamily="@font/typoring"
        android:text="Makes your passwords more secure"
        android:textColor="@color/colorDarkGrey"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:background="@drawable/bg_signing">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/typoring"
                    android:text="Welcome\nBack"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textSize="30sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/typoring"
                    android:text="Log back into your account"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="18sp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="5dp"
                    android:background="@drawable/bg_rounded_light_grey">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Email"
                        android:fontFamily="@font/typoring"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <View
                        android:id="@+id/divider_one"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="75dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/colorDarkGrey"/>

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="10dp"
                        android:fontFamily="@font/nunito"
                        android:textSize="16sp"
                        android:hint="Enter your email"
                        android:inputType="textEmailAddress"
                        android:textColorHint="@color/colorDarkGrey"
                        android:paddingEnd="5dp"
                        android:layout_toEndOf="@id/divider_one"
                        android:background="@drawable/bg_rounded_light_grey"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/bg_rounded_light_grey">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Password"
                        android:fontFamily="@font/typoring"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <View
                        android:id="@+id/divider_two"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="75dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/colorDarkGrey"/>

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="10dp"
                        android:fontFamily="@font/nunito"
                        android:textSize="16sp"
                        android:hint="Enter your password"
                        android:inputType="textPassword"
                        android:textColorHint="@color/colorDarkGrey"
                        android:paddingEnd="5dp"
                        android:layout_toEndOf="@id/divider_two"
                        android:layout_toStartOf="@id/pass_visibility"
                        android:background="@drawable/bg_rounded_light_grey"/>

                    <ImageView
                        android:id="@+id/pass_visibility"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/invisible"
                        app:tint="@color/colorDarkGrey" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_forgot_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/typoring"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorDarkGrey"
                    android:text="Forgot Password?"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="25dp">

                    <TextView
                        android:id="@+id/btn_sign_in"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ripple_bg_rounded_orange"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="@font/typoring"/>

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:indeterminateTint="@color/colorWhite"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/typoring"
                    android:text="Don't have an account?"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/btn_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ripple_stroke_rounded_orange"
                    android:fontFamily="@font/typoring"
                    android:gravity="center"
                    android:text="Create new account"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>