<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorLightGrey"
    tools:context=".Profile.ChangePasswordActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingStart="25dp"
        android:paddingEnd="5dp"
        android:fontFamily="@font/typoring"
        android:text="Change Account\nPassword"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:textSize="36sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="25dp"
        android:paddingEnd="5dp"
        android:fontFamily="@font/typoring"
        android:text="Change your account password"
        android:textColor="@color/colorDarkGrey"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:background="@drawable/bg_signing">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_change_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change password"
                    android:fontFamily="@font/typoring"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/bg_rounded_light_grey">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Old Pass"
                        android:fontFamily="@font/typoring"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <View
                        android:id="@+id/divider_tw"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="75dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/colorDarkGrey"/>

                    <EditText
                        android:id="@+id/et_old_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="10dp"
                        android:fontFamily="@font/nunito"
                        android:textSize="16sp"
                        android:hint="Enter old password"
                        android:inputType="textPassword"
                        android:textColorHint="@color/colorDarkGrey"
                        android:paddingEnd="5dp"
                        android:layout_toEndOf="@id/divider_tw"
                        android:layout_toStartOf="@id/pass_visibility_old"
                        android:background="@drawable/bg_rounded_light_grey"/>

                    <ImageView
                        android:id="@+id/pass_visibility_old"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/invisible"
                        app:tint="@color/colorDarkGrey" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="7dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/bg_rounded_light_grey">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="New Pass"
                        android:fontFamily="@font/typoring"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <View
                        android:id="@+id/divider_th"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="75dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/colorDarkGrey"/>

                    <EditText
                        android:id="@+id/et_new_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="10dp"
                        android:fontFamily="@font/nunito"
                        android:textSize="16sp"
                        android:hint="Enter new password"
                        android:inputType="textPassword"
                        android:textColorHint="@color/colorDarkGrey"
                        android:paddingEnd="5dp"
                        android:layout_toEndOf="@id/divider_th"
                        android:layout_toStartOf="@id/pass_visibility_new"
                        android:background="@drawable/bg_rounded_light_grey"/>

                    <ImageView
                        android:id="@+id/pass_visibility_new"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/invisible"
                        app:tint="@color/colorDarkGrey" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="7dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/bg_rounded_light_grey">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Confirm"
                        android:fontFamily="@font/typoring"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <View
                        android:id="@+id/divider_on"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="75dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/colorDarkGrey"/>

                    <EditText
                        android:id="@+id/et_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="10dp"
                        android:fontFamily="@font/nunito"
                        android:textSize="16sp"
                        android:hint="Confirm new password"
                        android:inputType="textPassword"
                        android:textColorHint="@color/colorDarkGrey"
                        android:paddingEnd="5dp"
                        android:layout_toEndOf="@id/divider_on"
                        android:layout_toStartOf="@id/pass_visibility_confirm"
                        android:background="@drawable/bg_rounded_light_grey"/>

                    <ImageView
                        android:id="@+id/pass_visibility_confirm"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/invisible"
                        app:tint="@color/colorDarkGrey" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/btn_change_pass"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ripple_bg_rounded_orange"
                        android:text="Change Password"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="@font/typoring"/>

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        android:indeterminateTint="@color/colorWhite"/>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>